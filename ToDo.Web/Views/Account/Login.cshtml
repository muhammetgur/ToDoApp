@model ToDo.Dto.Web.LoginDto
@{
    ViewBag.Title = "Login";
}

<div class="contentpanel">
    <div class="row">
        <div class="col-md-4 col-md-offset-3 mt150">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "validate-form"}))
            {
                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new {@class = "form-control ", required = "required", placeholder = "Email"})
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.Password, new {@class = "form-control ", required = "required", placeholder = "Password"})
                </div>
                
                <button type="submit" class="btn btn-success btn-block btn-lg">Login</button>
            }
        </div><!-- col-sm-5 -->
        <div class="col-md-3"></div>
    </div><!-- row -->
</div><!-- signin -->